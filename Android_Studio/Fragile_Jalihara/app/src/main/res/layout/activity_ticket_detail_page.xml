<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TicketDetailPage"
    android:fitsSystemWindows="true"
    android:id="@+id/drawer_layout"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:id="@+id/toolbar"
                android:elevation="4dp"
                android:background="@color/pink"
                app:titleTextColor="@color/white">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/back"
                    android:layout_marginRight="10dp"
                    android:id="@+id/backbtn"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/app_name"
                    android:fontFamily="@font/milkipack"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:layout_marginTop="2dp"
                    android:gravity="center_vertical"
                    />
                <ImageView
                    android:id="@+id/ticketIcon"
                    android:layout_gravity="end"
                    android:layout_marginRight="20dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/nav_ticket"/>
            </androidx.appcompat.widget.Toolbar>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="30dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Purchase Details"
                    android:textAlignment="center"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="10dp">
                    <ImageView
                        android:id="@+id/showImage"
                        android:layout_width="180dp"
                        android:layout_height="240dp"
                        android:src="@drawable/banner2"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Show Name"
                    android:id="@+id/showName"
                    android:textAlignment="center"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/black"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="10dp">
                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="55dp"
                        android:orientation="vertical"
                        android:background="@drawable/border_radius"
                        android:layout_gravity="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Date"
                            android:textSize="11sp"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:fontFamily="@font/poppins_regular"/>
                        <TextView
                            android:id="@+id/showDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="May 25, 2023"
                            android:textSize="12sp"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:fontFamily="@font/poppins_regular"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="55dp"
                        android:orientation="vertical"
                        android:background="@drawable/border_radius"
                        android:layout_gravity="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_marginLeft="12dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Price"
                            android:textSize="11sp"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:fontFamily="@font/poppins_regular"/>
                        <TextView
                            android:id="@+id/showPrice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="May 25, 2023"
                            android:textSize="12sp"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:fontFamily="@font/poppins_regular"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="55dp"
                        android:orientation="vertical"
                        android:background="@drawable/border_radius"
                        android:layout_gravity="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_marginLeft="12dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Place"
                            android:textSize="11sp"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:fontFamily="@font/poppins_regular"/>
                        <TextView
                            android:id="@+id/showLocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="May 25, 2023"
                            android:textSize="12sp"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:fontFamily="@font/poppins_regular"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="35dp"
                    android:paddingRight="35dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="Name"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/poppins_medium"/>

                    <EditText
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:inputType="textPersonName"
                        android:paddingLeft="15dp"
                        android:textColor="@color/black"
                        android:hint="Write your name here"
                        android:textColorHint="@color/grey"
                        android:textSize="14sp"
                        android:id="@+id/name"
                        android:background="@drawable/border"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="Booth Type"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:layout_marginTop="25dp"
                        android:fontFamily="@font/poppins_medium"/>

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/radiogroup">
                        <RadioButton android:id="@+id/standard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Standard"
                            android:textSize="13sp"
                            android:buttonTint="@color/darkgrey"
                            android:onClick="onRadioButtonClicked"/>
                        <RadioButton android:id="@+id/deluxe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Deluxe"
                            android:textSize="13sp"
                            android:buttonTint="@color/darkgrey"
                            android:onClick="onRadioButtonClicked"
                            android:layout_marginLeft="10dp"/>
                        <RadioButton android:id="@+id/luxury"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Luxury"
                            android:buttonTint="@color/darkgrey"
                            android:textSize="13sp"
                            android:onClick="onRadioButtonClicked"
                            android:layout_marginLeft="10dp"/>
                    </RadioGroup>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="Quantity"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/poppins_medium"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:id="@+id/minButton"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/border_button"
                            android:text="-"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            android:paddingTop="5dp"/>
                        <TextView
                            android:id="@+id/quantity"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:paddingTop="5dp"
                            android:text="1"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@color/black"
                            android:textAlignment="center"/>
                        <TextView
                            android:id="@+id/plusButton"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/border_button"
                            android:text="+"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            android:paddingTop="5dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/pink"
                            android:fontFamily="@font/poppins_regular"
                            android:id="@+id/errorBuy"
                            android:layout_marginTop="10dp"
                            android:textAlignment="center"/>
                        <Button
                            android:id="@+id/buyDetail"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:text="Buy"
                            android:textColor="@color/white"
                            android:fontFamily="@font/poppins_medium"
                            app:cornerRadius="15dp"
                            android:backgroundTint="@color/pink"
                            android:layout_marginTop="10dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu"
        android:background="@color/pink"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:itemIconSize="30dp"
        android:paddingTop="20dp"/>
</androidx.drawerlayout.widget.DrawerLayout>